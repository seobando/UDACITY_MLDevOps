name: data_split
conda_env: conda.yml

entry_points:
  main:
    parameters:

      input_artifact:
        description: Fully qualified name for the artifact
        type: string

       artifact_root:
        description: Name for the W&B artifact that will be created
        type: string

       artifact_type:
        description:  Type of the artifact to create
        type: string

       test_size:
        description: Description for the artifact
        type: string

       random_state:
        description: Integer to use to seed the random number generator
        type: string
        default: 42

       stratify :
        description: If provided, it is considered a column name to be used for stratified splitting
        type: string
        default: "null"


    command: >-
      python run.py --input_artifact {input_artifact} \
                    --artifact_root {artifact_root} \
                    --artifact_type {artifact_type} \
                    --test_size {test_size} \
                    --random_state {random_state} \
                    --stratify {stratify}